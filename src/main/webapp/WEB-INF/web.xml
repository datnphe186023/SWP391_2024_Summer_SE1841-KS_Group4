<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardAdminServlet</servlet-name>
        <servlet-class>controller.admin.DashboardAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardAcademicStaffServlet</servlet-name>
        <servlet-class>controller.academicstaff.DashboardAcademicStaffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardHeadTeacherServlet</servlet-name>
        <servlet-class>controller.headteacher.DashboardHeadTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardTeacherServlet</servlet-name>
        <servlet-class>controller.teacher.DashboardTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardAccountantServlet</servlet-name>
        <servlet-class>controller.accountant.DashboardAccountantServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardParentServlet</servlet-name>
        <servlet-class>controller.parent.DashboardParentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidatePassword</servlet-name>
        <servlet-class>controller.ValidatePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardAdminServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardAcademicStaffServlet</servlet-name>
        <url-pattern>/academicstaff/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardHeadTeacherServlet</servlet-name>
        <url-pattern>/headteacher/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardTeacherServlet</servlet-name>
        <url-pattern>/teacher/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardAccountantServlet</servlet-name>
        <url-pattern>/accountant/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardParentServlet</servlet-name>
        <url-pattern>/parent/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidatePassword</servlet-name>
        <url-pattern>/ValidatePassword</url-pattern>
    </servlet-mapping>
</web-app>
